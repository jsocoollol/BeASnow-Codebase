-- initalizations
local tool = script.Parent
local handle = tool.Handle
local db = 0
local throw = tool.Throw

local rs = game:GetService("ReplicatedStorage")
-- player using tool function
tool.Activated:Connect(function()
		local plr = game.Players:GetPlayerFromCharacter(tool.Parent)
	-- this does nothing as of now, its bugged and im working on fixing it
		if db == 0 and plr.Character:GetAttribute("Stunned") == false then
			db = 1
		
			local char = plr.Character
			local hrp = char:FindFirstChild("HumanoidRootPart")
		
			task.wait(0.3)
			throw:Play()
			handle.Transparency = 1
		
			local snowballClone = rs.Items.Snowball:Clone()
			snowballClone.Parent = game.Workspace.PhysicsObjects
			snowballClone.CFrame = handle.CFrame + Vector3.new(2, 0, 0)
			snowballClone.Orientation = hrp.Orientation + Vector3.new(0, 270, 0)
			snowballClone.AssemblyLinearVelocity = hrp.CFrame.lookVector * 80 + Vector3.new(0,1,0)
			snowballClone.Owner.Value = plr.UserId
		
			task.wait(1)
		
			handle.Transparency = 0
		
			db = 0
		
		end
	
end)
